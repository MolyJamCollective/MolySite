<h1>Edit Group</h1>

<%= form_for(@group, :url => {:action => "update"}, :html => {:method => :put }) do |f| %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name, :autofocus => true %></div>

  <div><%= f.label :description %><br />
  <%= f.text_area :description %></div>

  <div><%= f.submit "Update" %></div>
<% end %>

<%= link_to "Back", :back %>