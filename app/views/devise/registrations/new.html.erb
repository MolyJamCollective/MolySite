<div class="centered">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true %>
  </fieldset>

  <fieldset><%= f.label :email %>
  <%= f.email_field :email %></fieldset>

  <fieldset><%= f.label :password %>
  <%= f.password_field :password %></fieldset>

  <fieldset><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></fieldset>

  <fieldset class="actions"><%= f.submit "Sign up", :class => 'button' %></fieldset>
<% end %>

<%= render "devise/shared/links" %>
</div>