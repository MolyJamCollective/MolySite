<article>
  <div class="c1">
    <div id="locations-list">
      <ul class="sort-by">
        <li class="sort btn" data-sort="name">Sort by City</li>
        <li class="sort btn" data-sort="country">Sort by Country</li>
      </ul>
      <ul class="list">
        <% @venues.each do |venue| %>
          <li>
            <%= link_to venue do %>
              <span class="flag-icon"><%= image_tag "flags/#{venue.country_code}.png" %></span>
              <h4><span class="name"><%= venue.city %></span> <span class="category">northamerica</span></h4>
              <h5><span class="country"><%= venue.country %></span></h5>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</article>
        
<aside>
  <h3>Region Filter</h3>
  <ul class="filter">
    <li class="btn" id="filter-none">Show all</li>
    <li class="btn" id="filter-australia">Only Australia</li>
    <li class="btn" id="filter-northamerica">Only North America</li>
    <li class="btn" id="filter-southamerica">Only South America</li>
    <li class="btn" id="filter-europe">Only Europe</li>
    <li class="btn" id="filter-asia">Only Asia</li>
  </ul>

  <hr />

