<h2>Attach a file</h2>
<a id="cancel_attachment" href="#" onclick="$('#attachment_popup').hide(); return false;">Cancel</a>
<div id="attach_file" class="clearfix">
  <div>
    <h3>Remote file:</h3>
    <%= form_for(@attachment, :remote => true, :format => "json", :html => {:id => "link_attachment_form"}) do |f| %>
      <%= f.text_field :remote_path %>
      <%= f.hidden_field :attachable_id %>
      <%= f.hidden_field :attachable_type %>
      <%= f.hidden_field :attachment_type %>
      <br />
      <%= f.submit "Link", :class => "btn" %>
    <% end %>
  </div>
  <div class="or_delim">
    OR
  </div>
  <div>
    <h3>Upload a file:</h3>
      <%= render "user_file_uploads/form" %>
  </div>
</div>
